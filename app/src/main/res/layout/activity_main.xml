<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgri"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ania.gesundesessen.MainActivity">

    <TextView
        style="@style/MyTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="@string/ready_to_find_out_more" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goji_im"
                    android:layout_width="50dp"
                    android:adjustViewBounds="true"
                    android:layout_height="50dp"
                    android:contentDescription="@string/hashtag"
                    android:onClick="goji_click"
                    android:src="@drawable/goji" />

                <TextView
                    android:id="@+id/goji_text"
                    style="@style/MyThemeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hashtag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kuskus_im"
                    android:adjustViewBounds="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/hashtag"
                    android:onClick="kuskus_click"
                    android:src="@drawable/kuskus" />

                <TextView
                    android:id="@+id/kuskus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/hashtag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/spirulina_im"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/hashtag"
                    android:onClick="spirulina_click"
                    android:src="@drawable/spirulina" />

                <TextView
                    android:id="@+id/spirulina_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/hashtag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chia_im"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/hashtag"
                    android:onClick="chia_click"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chia" />

                <TextView
                    android:id="@+id/chia_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/hashtag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/polenta_im"
                    android:layout_width="50dp"
                    android:adjustViewBounds="true"
                    android:layout_height="50dp"
                    android:contentDescription="@string/hashtag"
                    android:onClick="polenta_click"
                    android:src="@drawable/polenta" />

                <TextView
                    android:id="@+id/polenta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/hashtag" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
